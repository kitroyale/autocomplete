<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="MageSuite\Autocomplete\Api\Data\SuggestedPhraseInterface"
                type="MageSuite\Autocomplete\Model\Autocomplete\SuggestedPhrase" />

    <type name="MageSuite\Autocomplete\Model\Product\Indexer\Fulltext\Datasource\AutocompleteData">
        <arguments>
            <argument name="attributeHelper" xsi:type="object">Smile\ElasticsuiteCatalog\Helper\ProductAttribute</argument>
            <argument name="resourceModel" xsi:type="object">Smile\ElasticsuiteCatalog\Model\ResourceModel\Product\Indexer\Fulltext\Datasource\AttributeData</argument>
        </arguments>
    </type>

    <type name="Smile\ElasticsuiteCore\Index\DataSourceResolver">
        <arguments>
            <argument name="datasources" xsi:type="array">
                <item name="catalog_product" xsi:type="array">
                    <item name="autocomplete_suggest" xsi:type="object">MageSuite\Autocomplete\Model\Product\Indexer\Fulltext\Datasource\AutocompleteData</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Smile\ElasticsuiteCore\Index\Mapping">
        <plugin name="set_analyser_for_autosuggest_field"
                type="MageSuite\Autocomplete\Plugin\Smile\ElasticsuiteCore\Index\Mapping\SetAnalyserForAutosuggestField"/>
    </type>

    <type name="Smile\ElasticsuiteCore\Model\Autocomplete\Terms\DataProvider">
        <plugin name="merge_auto_generated_suggestions"
                type="MageSuite\Autocomplete\Plugin\ElasticsuiteCore\Model\Autocomplete\Terms\DataProvider\MergeAutoGeneratedSuggestions"
                sortOrder="10"
        />

        <plugin name="bold_searched_query_in_results"
                type="MageSuite\Autocomplete\Plugin\ElasticsuiteCore\Model\Autocomplete\Terms\DataProvider\BoldSearchedQueryInResults"
                sortOrder="20"
        />
    </type>
</config>
